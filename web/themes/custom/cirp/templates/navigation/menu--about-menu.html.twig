{#
/**
 * @file
 * Theme override to display a menu.
 *
 * Available variables:
 * - menu_name: The machine name of the menu.
 * - items: A nested list of menu items. Each menu item contains:
 *   - attributes: HTML attributes for the menu item.
 *   - below: The menu item child items.
 *   - title: The menu link title.
 *   - url: The menu link url, instance of \Drupal\Core\Url
 *   - localized_options: Menu link localized options.
 *   - is_expanded: TRUE if the link has visible children within the current
 *     menu tree.
 *   - is_collapsed: TRUE if the link has children within the current menu tree
 *     that are not currently visible.
 *   - in_active_trail: TRUE if the link is in the active trail.
 */
#}
{% import _self as menus %}

{#
  We call a macro which calls itself to render the full tree.
  @see http://twig.sensiolabs.org/doc/tags/macro.html
#}
{{ menus.menu_links(items, attributes, 0) }}

{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}
  {%
    set submenu_classes = [
      'nav',
      'navbar-nav',
      'sub-nav',      
    ]
    
  %}
  {%
    set menu_classes = [
      'nav',
      'navbar-nav',
      'parent-nav',
      'about-menu',
    ]
    
  %}
  {% if items %}
    {% if menu_level == 0 %}
<ul{{ attributes.addClass(menu_classes) }} {{menu_level}}>
  {% elseif  menu_level == 3 %}
  <ul {{ attributes.removeClass(menu_classes).addClass(submenu_classes) }} {{menu_level}}>  
  {% else %}
<ul {{ attributes.removeClass(submenu_classes).addClass(menu_classes) }} {{menu_level}}>
  {% endif %}
  {% for item in items %}
	{% if menu_level == 0 %}
	<h5 class={{item.in_active_trail ? 'active':'hidden'}}>{{item.title}}</h5>

 {%
      set classes_link = [
      'nav-link',
      'sub-link',
      item.is_expanded ? 'dropdown-toggle',
      item.is_collapsed ? 'dropdown-toggles navicon',
      item.in_active_trail ? 'active is-active',
    ]
    %}
    {%
      set classes_li = [
      'nav-item',
     'parent-li',
    ]
    %}
    {% elseif  menu_level == 1 %}
    {%
       set classes_link = [
       'nav-link',
      'child-link',
       item.is_expanded ? 'dropdown-toggle',
       item.is_collapsed ? 'dropdown-toggles navicon',
       item.in_active_trail ? 'active is-active',
     ]
     %}
     {%
      set classes_li = [
      'nav-item',
     'child-li',
    ]
    %}
    {% elseif  menu_level == 2 %}
    {%
       set classes_link = [
       'nav-link',
      'subchild-link',
       item.is_expanded ? 'dropdown-toggle',
       item.is_collapsed ? 'dropdown-toggles navicon',
       item.in_active_trail ? 'active is-active',
     ]
     %}
     {%
      set classes_li = [
      'nav-item',
     'subchild-li',
    ]
    %}
  {% else %}
   {%
      set classes_link = [
      'nav-link',
      'subchildchild-link',
      item.is_expanded ? 'dropdown-toggle',
      item.is_collapsed ? 'dropdown-toggles navicon',
      item.in_active_trail ? 'active is-active',
    ]
    %}
    {%
      set classes_li = [
      'nav-item',
     'subchildchild-li',
    ]
    %}
  {% endif %}


    <li{{ item.attributes.addClass(classes_li) }}>
      {{ link(item.title, item.url,  { 'class': classes_link }) }}
      {% if item.below %}

      {% if menu_level != 0 %}

         {% endif %}
        {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
      {% endif %}
    </li>
  {% endfor %}
</ul>
  {% endif %}
{% endmacro %}
